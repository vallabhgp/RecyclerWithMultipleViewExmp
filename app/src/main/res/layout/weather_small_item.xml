<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquioseLight">

    <TextView
        android:id="@+id/city_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="delhi"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textColor="@color/grey"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/season_type_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/city_name_text" />

    <TextView
        android:id="@+id/min_max_temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/20"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/season_type_img"
        android:layout_margin="10dp"
        />

</RelativeLayout>